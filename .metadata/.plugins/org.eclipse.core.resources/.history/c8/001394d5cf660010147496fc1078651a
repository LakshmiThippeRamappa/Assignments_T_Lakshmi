package com.wipro.Assignment;

public class StringUtility {
	 public int countVowels(String str) {
		 	
	        int count = 0;
	        str = str.toLowerCase();
	        for (char ch : str.toCharArray()) {
	        	if(Character.isLetter(ch))
	        	{
		            if ("aeiou".indexOf(ch) != -1) {
		                count++;
		            }
	        	}
	        }
	        return count;
	    }
}
